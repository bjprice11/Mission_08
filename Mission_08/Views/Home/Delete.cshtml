@model Mission_08.Models.TaskItem

@{
    ViewData["Title"] = "Delete Task";
}

<h2 class="mb-4">Delete Task</h2>

<div class="alert alert-warning">
    Are you sure you want to delete this task?
</div>

<div class="card mb-4">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Task</dt>
            <dd class="col-sm-9">@Model.Task</dd>

            <dt class="col-sm-3">Due Date</dt>
            <dd class="col-sm-9">@Model.DueDate</dd>

            <dt class="col-sm-3">Quadrant</dt>
            <dd class="col-sm-9">@Model.Quadrant</dd>

            <dt class="col-sm-3">Category</dt>
            <dd class="col-sm-9">@(Model.Category?.Name ?? "None")</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input asp-for="TaskId" type="hidden" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="QuadrantsView" asp-controller="Home" class="btn btn-outline-secondary">Cancel</a>
    </div>
</form>
